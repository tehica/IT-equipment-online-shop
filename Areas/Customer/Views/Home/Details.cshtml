@model ShoppingCart
@{
    ViewData["Title"] = "Details";
}

<br />
<h1 class="text-info text-center">Product Details</h1>
<hr />
<br />

<form asp-action="AddToCart" method="post">

    <input asp-for="ProductId" hidden />

    <div class="text-center">
        <div class="form-group">
            <div class="col-md-12 font-weight-bold">
                <h4><span>@Html.DisplayFor(model => model.Product.Name)</span></h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <img src="~/images/products/@Model.Product.Image" width='400px' height='300px' style="border-radius:5px;border: 5px solid #bbb9b9;" />
            </div>
        </div>

        <div class="form-group text-left">
            <div class="col-md-12">
                <label asp-for="@Model.Product.Description" class="col-form-label font-weight-bold"></label>
                <div class="border p-2">
                    @Html.Raw(Model.Product.Description)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <h4 class="text-info">@Model.Product.Price.ToString("C2")</h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" value="Add to Cart" class="btn btn-primary">Add To Cart</button>
            </div>
        </div>
    </div>
</form>

