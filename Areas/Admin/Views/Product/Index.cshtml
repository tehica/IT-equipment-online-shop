@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-3">
        <h1>Product List</h1>
    </div>

    <div class="col-3">
        <p>
            <a asp-action="Create"
               class="btn btn-warning text-white font-weight-bold ml-1"
               style="line-height: 35px; font-size: 20px">
                + Create New Product
            </a>
        </p>
    </div>
</div>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped border">
        <thead>
            <tr class="table-secondary">
                
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td class="font-italic">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-primary font-weight-bold">
                        @Html.DisplayFor(modelItem => item.Price) $
                    </td>
                    
                    
                    <td>
                        <div class="font-italic">@Html.DisplayFor(modelItem => item.Category.Name)</div>

                        <partial name="_EditDetailsDeleteButtons" model="item.Id" />
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="font-weight-bold">No product exists...</p>
}

