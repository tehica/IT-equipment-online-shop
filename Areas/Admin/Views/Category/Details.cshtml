@model Category
@{
    ViewData["Title"] = "Edit";
}
<h1>Details about <span class="text-danger">@Model.Name</span> Category</h1>
<hr />
<br />
<div class="row">
    <div class="col-md-10">

        <div class="form-group">
            <div class="row">
                <div class="col-2 font-weight-bold">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">

                <partial name="_DetailsAndBackToListButtons" model="Model.Id" />

            </div>
        </div>
    </div>
</div>